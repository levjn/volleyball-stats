<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="volleyball_stats.Pages.CreateMatchPage"
             Title="Neuen Match erstellen">
    <VerticalStackLayout>
        <Label 
            Text="Heim Team" />
        
        <Entry Placeholder="Name"
               x:Name="homeEntry" />
        
        <Label 
            Text="Gast Team" />
        
        <Entry Placeholder="Name"
               x:Name="guestEntry" />
        
        <Button
            x:Name="finishedButton"
            Text="Weiter" 
            Clicked="navigateToCreatePlayers" />
    </VerticalStackLayout>
</ContentPage>