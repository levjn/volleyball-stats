<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="volleyball_stats.Pages.MainPage"
             Title="Volleyball Stats">

    <Grid RowDefinitions="*,Auto">
        <!-- Content Section -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Label Text='Klicke auf "Neuer Match" um zu beginnen.' />
                <Button x:Name="CreateMatchBtn" Text="Neuer Match" Clicked="navigateToCreateMatch" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Section -->
        <StackLayout VerticalOptions="End" Padding="10" Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Contact" Clicked="navigateToContactPage" Margin="5"/>
            <Button Text="Instructions" Clicked="navigateToInstructionsPage" Margin="5"/>
        </StackLayout>
    </Grid>
</ContentPage>