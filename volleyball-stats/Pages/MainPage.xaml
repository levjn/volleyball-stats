<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="volleyball_stats.Pages.MainPage"
             Title="Volleyball Stats">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text='Klicke auf "Neuer Match" um zu beginnen.' />

            <Button
                x:Name="CreateMatchBtn"
                Text="Neuer Match" 
                Clicked="navigateToCreateMatch" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
